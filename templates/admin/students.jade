extends ./base.jade

block content
    main
        table.table.table-striped.table-bordered
            thead
                tr
                    th First name
                    th Last name
                    th User id
                    th Student number
                    th Github id
            tbody
                for student in students
                    tr
                        td= student.firstname
                        td= student.lastname
                        td= student.userid
                        td= student.student_number
                        td= student.github_id

        br

        h3 Import from csv file
        form.form-inline(method='POST', enctype='multipart/form-data')
            div.form-group
                label(for='file')
                input#file(type='file', name='csv_file', accept='. csv')
            div.form-group
                button.btn.btn-primary(type='submit') Import
