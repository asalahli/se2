extends ./base.jade

block content
    h3= deliverable.name + ' - '
        if deliverable.weight == 0
            span Pass/Fail
        else
            span= deliverable.weight + '%'

    for component in deliverable.components
        if component.name == 'Document'
            p= component.name
            p Opens:&nbsp;
                i= component.open_date.toDateString()
            p Closes:&nbsp;
                i= component.close_date.toDateString()
    p
        if is_submitted
            a(href='/download/'+deliverable.name+'/'+user.userid) Download
        else
            i Not submitted yet

    if uploaded
        p
            i Upload successful

    form(method='POST',enctype='multipart/form-data')
        input(type='file', name='file', accept='.pdf')
        input(type='submit')